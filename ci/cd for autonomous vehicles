<body>

<h1>ðŸš— Autonomous Vehicle CI/CD Pipeline</h1>

<div class="pipeline">
    <div class="stage" id="stage0">Code Commit</div>
    <div class="stage" id="stage1">Build</div>
    <div class="stage" id="stage2">Simulation Test</div>
    <div class="stage" id="stage3">Sensor Validation</div>
    <div class="stage" id="stage4">Safety Check</div>
    <div class="stage" id="stage5">Deploy</div>
</div>

<button onclick="runPipeline()">Run CI/CD Pipeline</button>

<div class="log" id="log"></div>

<script>
    let stages = [
        "Code committed to repository",
        "Building autonomous driving modules",
        "Running simulation tests (LiDAR, Camera, Radar)",
        "Validating sensor fusion",
        "Performing safety & compliance checks",
        "Deploying to autonomous vehicle system"
    ];

    let currentStage = 0;

    function runPipeline() {
        resetPipeline();
        currentStage = 0;
        runNextStage();
    }

    function runNextStage() {
        if (currentStage >= stages.length) {
            logMessage("âœ… CI/CD Pipeline completed successfully!");
            return;
        }

        let stageDiv = document.getElementById("stage" + currentStage);
        stageDiv.classList.add("active");
        logMessage("â–¶ " + stages[currentStage]);

        setTimeout(() => {
            // Simulate failure chance
            if (Math.random() < 0.1) {
                stageDiv.classList.remove("active");
                stageDiv.classList.add("failed");
                logMessage("âŒ Pipeline failed at: " + stages[currentStage]);
                return;
            }

            stageDiv.classList.remove("active");
            stageDiv.classList.add("active");
            currentStage++;
            runNextStage();
        }, 1500);
    }

    function resetPipeline() {
        document.getElementById("log").innerHTML = "";
        for (let i = 0; i < stages.length; i++) {
            let stage = document.getElementById("stage" + i);
            stage.classList.remove("active", "failed");
        }
    }

    function logMessage(message) {
        let log = document.getElementById("log");
        log.innerHTML += message + "<br>";
        log.scrollTop = log.scrollHeight;
    }
</script>

</body>
</html>
